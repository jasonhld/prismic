{
    "name": "webhappens/prismic",
    "description": "A Laravel package for using Prismic.io",
    "keywords": [
        "webhappens",
        "prismic"
    ],
    "homepage": "https://github.com/webhappens/prismic",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Gurney",
            "email": "ben@webhappens.co.uk",
            "homepage": "https://webhappens.co.uk",
            "role": "Developer"
        },
        {
            "name": "Sam Leicester",
            "email": "sam@webhappens.co.uk",
            "homepage": "https://webhappens.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0|^10.0|^11.0",
        "prismic/php-sdk": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16|*",
        "mockery/mockery": "~1.3.3|^1.4.2",
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.5.8"
    },
    "autoload": {
        "psr-4": {
            "WebHappens\\Prismic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebHappens\\Prismic\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "WebHappens\\Prismic\\PrismicServiceProvider"
            ]
        }
    }
}
